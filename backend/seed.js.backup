async function seedDatabase() {
  try {
    console.log('🔌 Connecting to MongoDB...');
    console.log('📍 MONGO_URI:', process.env.MONGO_URI);
    
    await mongoose.connect(process.env.MONGO_URI);
    console.log('✅ Connected to MongoDB');

    // Clear existing
    const deleteResult = await Destination.deleteMany({});
    console.log(`🗑️  Cleared ${deleteResult.deletedCount} existing destinations`);

    // Insert new
    const insertResult = await Destination.insertMany(sampleDestinations);
    console.log(`✅ Successfully seeded ${insertResult.length} destinations`);
    
    // Verify
    const count = await Destination.countDocuments();
    console.log(`🔍 Verification: ${count} destinations in database`);
    
    // Show examples
    const examples = await Destination.find().limit(3);
    console.log('\n📄 Sample destinations:');
    examples.forEach(dest => {
      console.log(`   - ${dest.name} (${dest.category}) - ${dest.country}`);
    });

    process.exit(0);
  } catch (error) {
    console.error('❌ Error seeding database:', error);
    process.exit(1);
  }
}

seedDatabase();